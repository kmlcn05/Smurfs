
@{
    ViewData["Title"] = "ProjectParameters";
    Layout = "~/Views/Shared/ScreenLayout.cshtml";
}

<h1>Project Parameters</h1>
<h1 id=userlog style="display:none">@ViewBag.Username</h1>
<link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
<link href="~/css/ScreenBack.css" rel="stylesheet" />
<link href="~/css/Project.css" rel="stylesheet" />
<div class="container">
    <br />
    <p><button onclick="document.getElementById('newprojectparameter').style.display='block'" class="btn btn-success">New Project Parameter</button></p>

    <div style="width:90%; margin:0 auto;">
        <table id="projectparametersDatatable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>ParametersDate</th>
                    <th>Project</th>
                    <th>ProjeCarpani</th>
                    <th>ProjeKapasite</th>
                    <th>ProjeGerceklesen</th>
                    <th>ProjeVerimYuzdesi</th>
                    <th>ProjeVerimDegeri</th>
                    <th>ProjeVerimSonucu</th>
                    <th>Actions</th>
                    <th>Actions</th>
                </tr>
            </thead>
        </table>
                 <br /><br /><br /><br /><br /><br />   
         @if (ViewBag.Usergruop == "Manager")
        {
            <button class="w3-button w3-blue  w3-large" > <a href ="/Manager/Manager/" style=" text-decoration: none;"><i class="fa fa-arrow-left"></i>  My Dashboard </a> </button>
        }
        else
        {
            <button class="w3-button w3-blue  w3-large" > <a href ="/Admin/Admin/" style=" text-decoration: none;"><i class="fa fa-arrow-left"></i>  My Dashboard </a> </button>
        }
            
    </div>
</div>


  <!-- NewProject Modal -->
    <div id="newprojectparameter" class="w3-modal">
        <div class="w3-modal-content w3-animate-zoom">
            <div class="w3-container w3-blue w3-display-container rounded-3 border-2 shadow">
                <span onclick= "reloadPage()" class="w3-button w3-display-topright w3-large">x</span>
                <h3>Project Parameter</h3>
            </div>
            <div id="Form">
                <form method="post">

                        Name: <input type="text" id="Name" placeholder="Name">
                        <br>
                        Date: <input type="date" id="ParametersDate" placeholder="ParametersDate">
                        <br>
                        Project: <select id="Project">
                            <option selected>Bir Değer Seçiniz</option>
                        </select>
                        <br>                   
                        Carpani: <input type="number" id="ProjeCarpani" placeholder="ProjeCarpani">
                        <br>
                        Kapasite: <input type="number" id="ProjeKapasite" placeholder="ProjeKapasite">
                        <br>
                        Gerceklesen: <input type="number" id="ProjeGerceklesen" placeholder="ProjeGerceklesen" >
                        <br>
                        VerimYuzdesi: <input type="number" id="ProjeVerimYuzdesi" placeholder="ProjeVerimYuzdesi">
                        <br>
                        VerimDegeri: <input type="number" id="ProjeVerimDegeri" placeholder="ProjeVerimDegeri">
                        <br>
                        VerimSonucu: <input type="number" id="ProjeVerimSonucu" placeholder="ProjeVerimSonucu">
                        <br>
                        <div id="hata" style="text-align:center; color:red;"> 

                        </div>
                        <button class="btn btn-lg btn-success btn-block Save" onclick="" type="submit">Save</button>
                </form>
            </div>
         </div>
    </div>  

@section Scripts
{
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/projectparameters.js"></script>

}
