
@{
    ViewData["Title"] = "User";
   Layout = "~/Views/Shared/ScreenLayout.cshtml";
}

<h1>User</h1>

<link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
<link href="~/css/ScreenBack.css" rel="stylesheet" />
<link href="~/css/Project.css" rel="stylesheet" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<div class="container">
    <br />
    <p><button onclick="document.getElementById('newuser').style.display='block'" class="btn btn-success">New User</button></p>

    <div style="width:90%; margin:0 auto;">
        <table id="userDatatable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Active</th>
                    <th>Mail</th>
                    <th>Date of Start</th>
                    <th>User Group</th>
                    <th>Team</th>
                    <th>Actions</th>
                    <th>Actions</th>
                </tr>
            </thead>
        </table>
                 <br /><br /><br /><br /><br /><br />   
         @if (ViewBag.Usergruop == "Manager")
        {
            <button class="w3-button w3-blue  w3-large" > <a href ="/Manager/Manager/" style=" text-decoration: none;"><i class="fa fa-arrow-left"></i>  My Dashboard </a> </button>
        }
        else
        {
            <button class="w3-button w3-blue  w3-large" > <a href ="/Admin/Admin/" style=" text-decoration: none;"><i class="fa fa-arrow-left"></i>  My Dashboard </a> </button>
        }
           
    </div>
</div>


  <!-- NewProject Modal -->
    <div id="newuser" class="w3-modal">
        <div class="w3-modal-content w3-animate-zoom">
            <div class="w3-container w3-blue w3-display-container rounded-3 border-2 shadow">
                <span onclick= "reloadPage()" class="w3-button w3-display-topright w3-large">x</span>
                <h3>User</h3>
            </div>
            <div id="Form">
                <form method="post">

                        UserName: <input type="text" id="UserName" placeholder="UserName">
                        <br>
                        Surname: <input type="text" id="Surname" placeholder="Surname">
                        <br>
                        Active: <select id="Active">
                            <option selected>Yes</option>
                            <option selected>No</option>
                        </select>
                        <br>
                        Mail: <input type="text" id="Mail" placeholder="Mail">
                        <br>
                        DateOfStart: <input type="date" id="DateOfStart" placeholder="DateOfStart" >
                        <br>
                        Usergroup: <select id="Usergroup">
                            <option selected>Bir Değer Seçiniz</option>
                        </select>
                        <br>
                        Team: <select id="Team">
                            <option selected>Bir Değer Seçiniz</option>
                        </select>
                        <br>
                        <div id="hata" style="text-align:center; color:red;"> 

                        </div>
                        <button class="btn btn-lg btn-success btn-block Save" onclick="" type="submit">Save</button>
                </form>
            </div>
         </div>
    </div>  

@section Scripts
{
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/user.js"></script>
}
