@{
    ViewData["Title"] = "Anasayfa";
    Layout = "~/Views/Shared/IndexPageLayout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
<meta charset="UTF-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link href="~/css/IndexPage.css" rel="stylesheet" />
<link href="~/js/IndexPage.js" rel="stylesheet" />
 <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>

<div id="card">
    <div>
        <div class="profile">
            <img src="/assets/userAnaSayfaPhoto.png">
            <h2 id="username">@ViewBag.Username</h2>
            <h4>@ViewBag.Usergruop</h4>
        </div>
        <!--ana sayfa content -->
        <!-- !PAGE CONTENT! -->
        <div class="w3-main" style="margin-left:100px;margin-top:250px;margin-right:80px;">

            <!-- Header -->
            <header class="w3-container" style="padding-top:22px">
                <h5><b><i class="fa fa-dashboard"></i> My Dashboard</b></h5>
            </header>

            <div class="w3-row-padding w3-margin-bottom" >
                <div class="w3-quarter" >
                    <div class="w3-container w3-red w3-padding-16" id="renk">
                        <h5><b> Toplam Hak Ediş</b></h5>
                        <div class="w3-left"><i class="fa  fa-trophy w3-xxxlarge"></i></div>
                        <div class="w3-right">
                            <h3 id="prim"></h3>
                            <br><br>
                        </div>
                        <div class="w3-clear"></div>
                    </div>
                </div>
                <div class="w3-quarter">
                    <div class="w3-container w3-blue w3-padding-16">
                        <h5><b> Projelerim</b></h5>
                        <div class="w3-left"><i class="fa fa-tasks w3-xxxlarge"></i></div>
                        <div class="w3-right">
                            <h3 id="proje"></h3>
                        </div>
                        <div class="w3-clear"></div>
                        <h5><b><i class="fa fa-check"></i> Tamamlandı</b></h5> <!--dzd statu done olanlar buraya çekilecek toplamı -->
                        <p id="projetam"></p>
                    </div>
                </div>
                <div class="w3-quarter">
                    <div class="w3-container w3-teal w3-padding-16">
                        <h5><b> Çağrılarım</b></h5>
                        <div class="w3-left"><i class="fa fa-laptop w3-xxxlarge"></i></div>
                        <div class="w3-right">
                            <h3 id="call"></h3>
                        </div>
                        <div class="w3-clear"></div>
                        <h5><b><i class="fa fa-check"></i> Tamamlandı</b></h5>
                        <p id="calltam"></p>
                    </div>
                </div>
                <div class="w3-quarter">
                    <div class="w3-container w3-orange w3-text-white w3-padding-16">
                        <div class="w3-left"><i class="fa fa-users w3-xxxlarge"></i></div>
                        <div class="w3-right">
                            <h3> </h3>
                        </div>
                        <div class="w3-clear"></div>
                        <h4> DZD Takım</h4>
                        <h5 id="takim"></h5>
                    </div>
                </div>
            </div>

            <!--projelerim tablo -->
            <div class="w3-panel">
                <div class="w3-row-padding" style="margin:0 -16px">

                    <div class="w3-twothird">
                        <!--burada foreach ile dönülücek -->
                        <h5><b><i class="fa fa-tasks"></i>Projelerim</b></h5>
                        <table border="1">

                            <tr>
                                <th><strong>Proje No</strong></th>
                                <th><strong>Proje Ad</strong></th>
                                <th><strong>DZD Statü</strong></th>
                            </tr>

                            <tr>
                                <td id="projeno"></td>
                                <td id="projead"></td>
                                <td style="text-align:center;" id="dzdstatu"></td>
                            </tr>
                        </table>
                        <br>
                        <button class="w3-button w3-dark-grey"><a href ="/Project/ProjectU/" style=" text-decoration: none;">Tümünü Görüntüle  <i class="fa fa-arrow-right"></i></a></button> 
                    </div>
                </div>
            </div>
            <hr>
            <!--Çagrılarım tablo -->
            <div class="w3-container">
                <h5><b><i class="fa fa-laptop"></i>Çağrılarım</b></h5>
                <table border="1">

                    <tr>
                        <th><strong>Task Tipi </strong></th>
                        <th><strong>Çağrı Detay</strong></th>
                        <th><strong>Öncelik</strong></th>
                    </tr>

                    <tr>
                        <td id="taskType"></td>
                        <td id="calldetay"></td>
                        <td style="text-align:center;" id="oncelik"></td>
                    </tr>
                </table><br>
                 <button class="w3-button w3-dark-grey"><a href ="/Call/CallU/" style=" text-decoration: none;">Tümünü Görüntüle  <i class="fa fa-arrow-right"></i></a></button> 
                      </div>
            <br>

            <div class="w3-container">
                <h5><b><i class="fa fa-tasks"></i>Projelerim</b></h5>
                <h5><b><i class="fa fa-check"></i> Tamamlandı</b></h5>
                <div class="w3-grey">
                    <div class="w3-container w3-center w3-padding w3-green" style="width:55%">+55%</div>
                </div>

                <h5><b><i class="fa fa-code-fork"></i> Devam Ediyor</b></h5>
                <div class="w3-grey">
                    <div class="w3-container w3-center w3-padding w3-orange" style="width:50%">50%</div>
                </div>

                <h5><b><i class="fa fa-times"></i>İptal</b></h5>
                <div class="w3-grey">
                    <div class="w3-container w3-center w3-padding w3-red" style="width:75%">75%</div>
                </div>
            </div>
            <br>
            <hr>

            <div class="w3-container">
                <h5><b><i class="fa fa-laptop"></i>Çağrılarım</b></h5>
                <h5><b><i class="fa fa-check"></i> Tamamlandı</b></h5>
                <div class="w3-grey">
                    <div class="w3-container w3-center w3-padding w3-green" style="width:55%">+55%</div>
                </div>

 

                <h5><b><i class="fa fa-code-fork"></i> Devam Ediyor</b></h5>
                <div class="w3-grey">
                    <div class="w3-container w3-center w3-padding w3-orange" style="width:50%">50%</div>
                </div>
            </div>
            <br><br><br>


            <!-- End page content -->
        </div>

    </div>

</div>




@section Scripts
        {
        <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
        <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
        <script src="~/js/IndexPage.js"></script>


    }

