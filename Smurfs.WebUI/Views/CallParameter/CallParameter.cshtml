
@{
    ViewData["Title"] = "CallParameter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Call Parameter Process</h1>

<link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
<div class="container">
    <br />
    <p><button onclick="document.getElementById('newcallparameter').style.display='block'" class="btn btn-success">New Call Parameter</button></p>

    <div style="width:90%; margin:0 auto;">
        <table id="callparameter" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>ParametersDate</th>
                    <th>Call</th>
                    <th>CallCarpani</th>
                    <th>CallKapasite</th>
                    <th>CallGerceklesen</th>
                    <th>CallVerimYuzdesi</th>    
                    <th>CallVerimDegeri</th>
                    <th>CallVerimSonucu</th>  
                    <th>Actions</th>
                    <th>Actions</th>
                </tr>
            </thead>
        </table>
    </div>
</div>


  <!-- NewProject Modal -->
    <div id="newcallparameter" class="w3-modal">
        <div class="w3-modal-content w3-animate-zoom">
            <div class="w3-container w3-blue w3-display-container rounded-3 border-2 shadow">
                <span onclick="document.getElementById('newcallparameter').style.display='none'" class="w3-button w3-display-topright w3-large">x</span>
                <h3>callparameter</h3>
            </div>
            <form method="post">
                <div class="container">
                    <div class="row">
                        <div class="col-lg mx-auto">
                            <div class="card shadow">
                                <div class="card-body p-5">
                                    <!--  Bootstrap table-->
                                    <div class="table-responsive">
                                        <table class="table table-bordered" id="tblProjects" >
                                        <input class="form-control rounded-0" type="text" id="Name" placeholder="Name"></td> 
                                        <input class="form-control rounded-0" type="date" id="ParametersDate" placeholder="ParametersDate"></td> 
                                        <input class="form-control rounded-0" type="text" id="Call" placeholder="Call"></td> 
                                        <input class="form-control rounded-0" type="text" id="CallCarpani" placeholder="CallCarpani"></td> 
                                        <input class="form-control rounded-0" type="text" id="CallKapasite" placeholder="CallKapasite"></td> 
                                        <input class="form-control rounded-0" type="text" id="CallGerceklesen" placeholder="CallGerceklesen"></td> 
                                        <input class="form-control rounded-0" type="text" id="CallVerimYuzdesi" placeholder="CallVerimYuzdesi"></td> 
                                        <input class="form-control rounded-0" type="text" id="CallVerimDegeri" placeholder="CallVerimDegeri"></td> 
                                        <input class="form-control rounded-0" type="text" id="CallVerimSonucu" placeholder="CallVerimSonucu"></td>                         
                                        </table>
                                    </div>
                                    <button class="btn btn-lg btn-success btn-block Save" onclick="" type="submit">Save</button>
                                </div>                
                            </div>
                        </div>
                    </div> 
                </div>           
            </form>                               
        </div>
    </div>

@section Scripts
{
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/callparameter.js"></script>

}
