
@{
    ViewData["Title"] = "Call";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css"/>
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway"/>
<link href="~/css/Call.css" rel="stylesheet" />
<div class="container">
    <br />
    <p><button onclick="document.getElementById('newcall').style.display='block'" class="btn btn-success">New Call</button></p> 

    <div style="width:90%; margin:0 auto;">
        <table id="CallDatatable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Bank</th>
                    <th>TaskType</th>
                    <th>JiraTaskNo</th>
                    <th>CallName</th>
                    <th>CagriCozumSuresi</th>
                    <th>CallDetails</th>
                    <th>CallPriority</th>
                    <th>CallDateCreated</th>
                    <th>CallDateResolved</th>
                    <th>CallStatus</th>
                    <th>Appointee</th>
                    <th>Reporter</th>
                    <th>Actions</th>
                    <th>Actions</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<!-- NewCall Modal -->
<div id="newcall" class="w3-modal">
    <div class="w3-modal-content w3-animate-zoom">
        <div class="w3-container w3-blue w3-display-container rounded-3 border-2 shadow">
            <span onclick= "reloadPage()" class="w3-button w3-display-topright w3-large">x</span>
            <h3>New Call</h3>
        </div>
            <div id="Form">
                <form method="post">

                        Bank: <select id="Bank">
                            <option selected>Bir Değer Seçiniz</option>
                        </select>
                        <br>
                        Task Type: <input type="text" value="" id="TaskType" placeholder="Task Type">
                        <br>
                        Jira Task No: <input type="text" value="" id="JiraTaskNo"placeholder="Jira Task No" >
                        <br>
                        Call Name <input type="text" value="" id="CallName"placeholder="Call Name" >
                        <br>
                        Cagri Cozum Suresi : <input type="text" value="" id="CagriCozumSuresi"placeholder="Cagri Cozum Suresi" >
                        <br>
                        Call Details :  <input type="text" value="" id="CallDetails"placeholder="Call Details" >
                        <br>
                        Call Priority : <input type="text" value="" id="CallPriority"placeholder="Call Priority" >
                        <br>
                        Call Date Created <input type="date" value="" id="CallDateCreated"placeholder="Call Date Created" >
                        <br>
                         
                        Call Date Resolved : <input type="date" value="" id="CallDateResolved"placeholder="Call Date Resolved" >
                        <br>
                        Call Status: <select id="CallStatus">
                            <option selected>Bir Değer Seçiniz</option>
                        </select>
                        <br>
                        Appointee :<input type="text" value="" id="Appointee"placeholder="Appointee" >
                        <br>
                        Reporter <input type="text" value="" id="Reporter" placeholder="Reporter">
                        <br>
                        <div id="hata" style="text-align:center; color:red;"> 

                        </div>
                        <button class="btn btn-lg btn-success btn-block Save" onclick="" type="submit">Save</button>
                </form>
         </div>
     </div>
</div>

    @section Scripts
        {
        <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
        <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
        <script src="~/js/Call.js"></script>

    }

